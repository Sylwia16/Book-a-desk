    <%= form.label :Password, "Password" %>
    <%= form.text_field :Password, class: "form-control", placeholder: "Enter Password" %>
  </div>

  <div class="form-group">
    <%= form.submit "Zapisz", class: "btn btn-primary" %>
  </div>
<% end %>
